RUN apt-get update && apt-get upgrade -y && apt-get install -y openjdk-8-jdk axel maven jq nodejs gradle groovy2 && apt clean
RUN axel https://download.jetbrains.com/cpp/CLion-2016.2.1.tar.gz 
